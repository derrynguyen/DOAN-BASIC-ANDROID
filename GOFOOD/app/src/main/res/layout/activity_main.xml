<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="19dp"
        android:paddingTop="30dp"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:fontFamily="@font/proximanovasemibold"
            android:text="Đặt đồ ăn cùng GO"
            android:textColor="#03001C"
            android:textFontWeight="500"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:paddingLeft="20dp"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:fontFamily="@font/proximanovalight"
            android:text="Đăng ký ngay để nhận nhiểu ưu đãi"
            android:textColor="#03001C"
            android:textFontWeight="500"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/proximanovasemibold"
                android:text="Số điện thoại"
                android:textColor="#03001C"
                android:textFontWeight="500"
                android:textSize="15dp" />


            <EditText
                android:id="@+id/txtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="@drawable/input_custom"
                android:hint="Nhập số điện thoại"
                android:padding="10dp"
                android:textColorHint="#A9A9A9"
                android:inputType="phone" />


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/proximanovasemibold"
                android:text="Mật khẩu"
                android:textColor="#03001C"
                android:textFontWeight="500"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txtPassowrd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_custom"
                android:hint="Nhập mật khẩu"
                android:padding="10dp"
                android:textColorHint="#A9A9A9" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/proximanovasemibold"
                android:text="Họ và tên"
                android:textColor="#03001C"
                android:textFontWeight="500"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txtFullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_custom"
                android:hint="Nhập tên đầy đủ"
                android:padding="10dp"
                android:textColorHint="#A9A9A9" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/proximanovasemibold"
                android:text="Địa chỉ"
                android:textColor="#03001C"
                android:textFontWeight="500"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txtAddreas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_custom"
                android:hint="Nhập tên đầy đủ"
                android:padding="10dp"
                android:textColorHint="#A9A9A9" />


            <Button
                android:id="@+id/btnRes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:padding="13dp"
                android:textColor="#000000"
                android:backgroundTint="@drawable/rounded_button"
                android:fontFamily="@font/proximanovasemibold"
                android:text="Đăng ký tài khoản"

                />

            <TextView
                android:id="@+id/gotoLogin"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/proximanovasemibold"
                android:text="Bấm để đăng nhập nếu đã có tài khoản"
                android:textColor="#03001C"
                android:textFontWeight="500"
                android:gravity="center"

                android:textSize="15dp" />

        </LinearLayout>




    </LinearLayout>



</LinearLayout>
